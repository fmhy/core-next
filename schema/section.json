{
  "$id": "./section.json",
  "title": "Section",
  "description": "Section schema",
  "type": "object",
  "properties": {
    "meta": {
      "description": "Metadata for this section",
      "type": "object",
      "properties": {
        "container": {
          "type": "object",
          "properties": {
            "message": {
              "description": "Message to show the user, in containers/admonitions (warnings, info)",
              "type": "string"
            },
            "type": {
              "description": "Admonition type",
              "type": "string",
              "enum": [
                "warning",
                "danger",
                "tip",
                "info"
              ]
            }
          },
          "required": [
            "message",
            "type"
          ]
        }
      }
    },
    "links": {
      "description": "Array of links",
      "type": "array",
      "items": {
        "$ref": "./link.json"
      }
    },
    "subsections": {
      "description": "Subsections below this section, to be displayed in h2 headings",
      "type": "object",
      "properties": {
        "meta": {
          "description": "Metadata for this subsection",
          "type": "object",
          "properties": {
            "container": {
              "type": "object",
              "properties": {
                "message": {
                  "description": "Message to show the user, in containers/admonitions (warnings, info)",
                  "type": "string"
                },
                "type": {
                  "description": "Admonition type",
                  "type": "string",
                  "enum": [
                    "warning",
                    "danger",
                    "tip",
                    "info"
                  ]
                }
              },
              "required": [
                "message",
                "type"
              ]
            }
          }
        },
        "links": {
          "description": "Array of links",
          "type": "array",
          "items": {
            "$ref": "./link.json"
          }
        }
      }
    }
  },
  "required": [
    "links"
  ]
}
