{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "FMHY",
  "description": "Links (YAML schema)",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The page title, to be used in VitePress"
    },
    "description": {
      "type": "string",
      "description": "The page description, to be used in VitePress"
    },
    "sections": {
      "type": "object",
      "description": "The sections for this page",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "meta": {
            "description": "Metadata for this section",
            "type": "object",
            "properties": {
              "container": {
                "type": "object",
                "properties": {
                  "message": {
                    "description": "Message to show the user, in containers/admonitions (warnings, info)",
                    "type": "string"
                  },
                  "type": {
                    "description": "Admonition type",
                    "type": "string",
                    "enum": [
                      "warning",
                      "danger",
                      "tip",
                      "info"
                    ]
                  }
                },
                "required": [
                  "message",
                  "type"
                ]
              }
            }
          },
          "links": {
            "description": "Array of links",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "Name of this link item",
                  "type": "string"
                },
                "link": {
                  "description": "Link of this link item",
                  "type": "string",
                  "pattern": "^(https?|ftp):\\/\\/[\\w\\d\\-_]+(\\.[\\w\\d\\-_]+)+([\\w\\d\\-\\.,@?^=%&:/~\\+#]*[\\w\\d\\-@?^=%&/~\\+#])?$",
                  "format": "uri",
                  "qt-uri-protocols": [
                    "https"
                  ]
                },
                "metadata": {
                  "type": "array",
                  "description": "List of tags for adding metadata to links",
                  "items": {
                    "type": "string",
                    "enum": [
                      "starred",
                      "oss",
                      "android",
                      "ios",
                      "linux",
                      "windows",
                      "macos"
                    ]
                  }
                },
                "links": {
                  "description": "Nested links, seperated by commas",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "description": "Name of this link item",
                        "type": "string"
                      },
                      "link": {
                        "description": "Link of this link item",
                        "pattern": "^(https?|ftp):\\/\\/[\\w\\d\\-_]+(\\.[\\w\\d\\-_]+)+([\\w\\d\\-\\.,@?^=%&:/~\\+#]*[\\w\\d\\-@?^=%&/~\\+#])?$",
                        "format": "uri",
                        "qt-uri-protocols": [
                          "https"
                        ]
                      },
                      "metadata": {
                        "type": "array",
                        "description": "List of tags for adding metadata to links",
                        "items": {
                          "type": "string",
                          "enum": [
                            "starred",
                            "oss",
                            "android",
                            "ios",
                            "linux",
                            "windows",
                            "macos"
                          ]
                        }
                      }
                    },
                    "required": [
                      "name",
                      "link"
                    ]
                  }
                }
              },
              "required": [
                "name",
                "link"
              ]
            }
          }
        },
        "required": [
          "links"
        ]
      }
    }
  },
  "required": [
    "title",
    "description",
    "sections"
  ]
}
